- var projectIndex = 0;

nav.nav(itemprop="breadcrumb")
	if template === 'layout'
		svg.nav-toggle-button(version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 21 9" xml:space="preserve")
			polygon.stroke(points="20,1 10.5,8 1,1" stroke-width="2px")
			polygon.triangle(points="20,1 10.5,8 1,1")

	if template === 'article'
		a(href=selectedLanguage.url)
			p.hidden !{ui.article.footer.backToSiteText}&nbsp;
			svg.nav-toggle-button(version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 21 9" xml:space="preserve")
				polygon.stroke(points="20,1 10.5,8 1,1" stroke-width="2px")
				polygon.triangle(points="20,1 10.5,8 1,1")


	if template === 'layout'
		.nav-links
			a.link.home-link.targeted(href="#home") !{nav.home}&nbsp;

			each project in projects.majors
				- projectIndex++;
				a.link(href="#project"+projectIndex) !{project.title}&nbsp;

			a.link.other-link(href="#other") !{nav.others}&nbsp;
			
			span.about-nav-block
				a.link.about-open-button(href="#about") !{nav.about}&nbsp;

